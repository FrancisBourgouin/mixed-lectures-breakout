<p style="color: green"><%= notice %></p>

<h1>Urls</h1>

<table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
          <% @urls.each do |url| %>
        <tr>
          <td><a href="/u/<%= url.short_url %>" target="_blank"><%= url.short_url %></a></td>
          <td> <%= link_to url.long_url, url %></td>
          <td>

            <form method="GET" action="/urls/<%= url.id %>/edit">
              <input class="btn btn-outline-primary" type="submit" value="Update">
            </form>
          </td>
          <td>
            <form method="POST" action="/urls/<%= url.id %>/delete">
              <input class="btn btn-outline-danger" type="submit" value="Delete">
            </form>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

     
<%= link_to "New url", new_url_path %>



